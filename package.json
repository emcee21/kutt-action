{
  "name": "kutt-action",
  "version": "1.0.0",
  "description": "GitHub Action to shorten URLs using Kutt",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "ncc build src/index.js -o dist --minify --source-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emcee/kutt-action.git"
  },
  "keywords": [
    "github-actions",
    "url-shortener",
    "kutt"
  ],
  "author": "emcee",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "kutt": "^3.0.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__tests__/**"
    ]
  }
}